<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />
            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />
            <stroke
                android:width="1dp"
                android:color="@color/coral" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="5dp"
                android:height="5dp" />
            <solid android:color="@color/coral" />
        </shape>
    </item>
</layer-list>